<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SearchFragment">
    <data>
        <import type="android.view.View"/>
        <variable
            name="model"
            type="com.cwlarson.deviceid.database.SearchItemsViewModel"/>
    </data>
    <FrameLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.ProgressBar"
            android:visibility="@{safeUnbox(model.isLoading)?View.VISIBLE:View.GONE}"
            android:layout_gravity="center"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/search_recycler_view"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            app:paddingTopSystemWindowInsets="@{true}"
            app:paddingBottomSystemWindowInsets="@{true}"
            app:paddingActionBar="@{true}"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:clipChildren="false"
            tools:listitem="@layout/recycler_text_view" />

        <include
            android:id="@+id/no_items"
            layout="@layout/no_items_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:isVisible="@{safeUnbox(model.itemsCount)&lt;=0}"
            app:isSearch="@{true}"
            android:layout_gravity="center"/>

    </FrameLayout>
</layout>