<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    app:cardUseCompatPadding="true">
    <RelativeLayout android:layout_height="match_parent"
        android:layout_width="match_parent">
        <ImageView
            android:id="@+id/item_fav_star"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_star_grey"
            android:contentDescription="@string/item_favorite_star_desc"
            android:scaleType="fitEnd"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:visibility="gone"/>
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="?android:selectableItemBackground"
        android:gravity="end|top"
        android:baselineAligned="false">
            <!-- title -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/item_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/primary_text_material_light_default"
                    android:lines="1"
                    android:ellipsize="end"/>
                <TextView
                    android:id="@+id/item_body"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:lines="1"
                    android:ellipsize="end"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageButton
                    android:id="@+id/item_more_button"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_more_vert_black"
                    android:background="@android:color/transparent"
                    android:contentDescription="@string/item_more_button_desc"
                    android:scaleType="fitCenter"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>